<%= render partial: 'layouts/header'%>

<div class="container">
  <div class="row justify-content-start">
    <div class="col-md-8">
      <div class="tab-content">
        <div class="tab-pane fade show active" id="pills-all-mcx" role="tabpanel" aria-labelledby="pills-all-mcx-tab">
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr> 
                  <% columns = ['index_name', 'symbol', 'open_price', 'high_price', 'low_price', 'last_price', 'prev_price', 'per_change', 'total_traded_volume', 'total_traded_value'] %>
                  <% columns.each do |column| %>
                    <th scope="col"><%= column.humanize %></th>
                  <% end %>
                </tr>
              </thead>
              <tbody>
                <% if @selected_stocks.present? %>
                  <% @selected_stocks.each do |stock| %>
                    <tr>
                      <% columns.each do |column| %>
                        <td><%= stock[column] %></td>
                      <% end %>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="<%= columns.length %>">No stock data available</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render partial: 'layouts/footer'%>
